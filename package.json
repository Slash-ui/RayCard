{
  "name": "@slash-ui/ray-card",
  "version": "1.0.0",
  "description": "Interactive glassmorphism card component with cursor-tracking lighting effects",
  "author": "Amin Shariati <amin.shariati@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Slash-ui/RayCard.git"
  },
  "homepage": "https://slash-ui.github.io/RayCard/",
  "bugs": {
    "url": "https://github.com/Slash-ui/RayCard/issues"
  },
  "keywords": [
    "react",
    "component",
    "glassmorphism",
    "card",
    "ui",
    "cursor-tracking",
    "lighting",
    "glow",
    "interactive",
    "react19"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "tsup && cp src/styles.css dist/styles.css",
    "prepublishOnly": "npm run build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-links": "^10.1.11",
    "@storybook/addon-onboarding": "^10.1.11",
    "@storybook/react": "^10.1.11",
    "@storybook/react-webpack5": "^10.1.11",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.20",
    "css-loader": "^7.1.2",
    "jsdom": "^27.4.0",
    "postcss": "^8",
    "postcss-loader": "^8.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "storybook": "^10.1.11",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.1",
    "ts-loader": "^9.5.1",
    "tsup": "^8.5.1",
    "typescript": "^5",
    "vitest": "^4.0.17",
    "webpack": "^5"
  }
}
